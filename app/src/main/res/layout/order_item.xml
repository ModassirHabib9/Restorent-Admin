<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="10dp"

    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
       
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:elevation="15dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    >
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Receipt Details"
                        android:gravity="center"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:layout_weight="1.1"

                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Item"
                            android:padding="10dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:orientation="vertical"



                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=""
                            android:padding="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center"
                            android:inputType="text"
                            android:id="@+id/txt_order_item"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:layout_weight="1.1"

                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Resturent name"
                            android:padding="10dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:orientation="vertical"



                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=""
                            android:padding="10dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/txt_resturent_name"
                            android:inputType="text"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:layout_weight="1.1"

                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Quantity"
                            android:padding="10dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:orientation="vertical"



                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=""
                            android:padding="10dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/txt_order_quantity"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:layout_weight="1.1"

                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="GST"
                            android:padding="10dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:orientation="vertical"



                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="8%"
                            android:padding="10dp"
                            android:layout_marginRight="5dp"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:layout_weight="1.1"

                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Order Type"
                            android:padding="10dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:orientation="vertical"



                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=""
                            android:padding="10dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/txt_order_type"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:layout_weight="1.1"

                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Total Cost with text"
                            android:padding="10dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:orientation="vertical"



                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=""
                            android:padding="10dp"
                            android:inputType="text"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center"
                            android:id="@+id/txt_order_price"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:layout_weight="1.1"

                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Address"

                            android:padding="10dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:orientation="vertical"



                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:padding="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:inputType="text"
                            android:id="@+id/txt_order_location"

                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Additonal Notes"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="5dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:id="@+id/txt_additional_nots"
                        android:padding="10dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="5dp"
                        />



                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#000"
                    ></View>


            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

</androidx.cardview.widget.CardView>